{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/login.css" type="text/css" media="screen">
{% endblock %}
{% block left_menu %}
    <a class="button primary" href="{{ path('homepage')}}">Home</a>
{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="row">
        <div class="small-10 small-centered columns">
            <h1 class="title">Login</h1>
        </div>
    </div>
    <form action="{{ path('login_check') }}" method="post">
        <div class="row">
            <div class="small-10 medium-6 small-centered columns">
                <label for="username">Email</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
        </div>
        <div class="row">
            <div class="small-10 medium-6 small-centered columns">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" />
            </div>
        </div>
        <div class="row">
            <div class="small-10 medium-6 small-centered columns">
                <button id="submit" type="submit" class="button hollow expanded">Login</button>
            </div>
        </div>
        <div class="row">
            <div class="small-10 medium-6 small-centered columns" id="forgot-password">
                <a href="{{ path('forgot_password') }}">Forgot Password</a>
            </div>
        </div>
        {% if error %}
            <div class="row error">
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        {% endif %}
    </form>
</div>
{% endblock %}