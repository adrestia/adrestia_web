{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/profile.css" type="text/css" media="screen">
{% endblock %}

{% block left_menu %}
    <a class="button primary" href="{{ path('homepage')}}">Home</a>
{% endblock %}
{% block search %}{% endblock %}

{% block body %}
<div class="wrapper">
    {% if flash is defined %}
        <div class="row">
            <div class="small-6 small-centered columns">
                <div class="success callout" data-closable="slide-out-right">
                    <h5>{{ flash }}</h5>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="small-10 small-centered columns">
            <h1 class="title">Profile</h1>
        </div>
    </div>
    <hr width="20%">
    <div class="row">
        <div class="small-10 medium-6 small-centered columns info">
            <label>
                Email
                <h5 class="email">{{ app.getUser.getEmail }}</h5>
            </label>
        </div>
    </div>
    <div class="row">
        <div class="small-10 medium-6 small-centered columns info">
            <label>
                College
                <h5 class="email">{{ app.getUser.getCollege.getName }}</h5>
            </label>
        </div>
    </div>
    <div class="row">
        <div class="small-10 medium-6 small-centered columns info">
            <label>
                Community Score
                <h5 class="email">{{ app.getUser.getScore }}</h5>
            </label>
        </div>
    </div>
    <hr width="20%">
    {{ form_start(form) }}
        <div class="row">
            <div class="small-10 medium-6 small-centered columns">
                <div class="password">
                    {{ form_row(form.oldPassword, { 'attr' : {'placeholder' : 'Old Password'}} ) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="small-10 medium-6 small-centered columns">
                <div class="password">
                    {{ form_row(form.newPassword.first, { 'attr' : {'placeholder' : 'New Password'}} ) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="small-10 medium-6 small-centered columns">
                <div class="password">
                    {{ form_row(form.newPassword.second, { 'attr' : {'placeholder' : 'Confirm Password'}} ) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="small-10 medium-6 small-centered columns">
                <button id="submit" type="submit" class="button hollow expanded">Update</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}